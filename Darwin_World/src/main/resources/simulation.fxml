<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="600.0" minWidth="800.0"
            fx:controller="presenter.SimulationPresenter">

    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="false" alignment="CENTER" />
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f0f0f0; -fx-min-width: 250;">
            <Label text="Statystyki" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

            <HBox spacing="10"><Label text="Dzień:"/><Label fx:id="dayLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Zwierząt:"/><Label fx:id="animalCountLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Roślin:"/><Label fx:id="plantCountLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Wolne pola:"/><Label fx:id="freeFieldsLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Śr. energia:"/><Label fx:id="avgEnergyLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Śr. życie:"/><Label fx:id="avgLifespanLabel" text="-"/></HBox>
            <HBox spacing="10"><Label text="Śr. dzieci:"/><Label fx:id="avgChildrenLabel" text="-"/></HBox>

            <Label text="Dominujący genotyp:" style="-fx-padding: 10 0 0 0; -fx-font-weight: bold;"/>
            <Label fx:id="bestGenotypeLabel" text="-" wrapText="true"/>

            <Button text="Pauza / Start" onAction="#onPauseClicked" style="-fx-margin: 20 0 0 0; -fx-min-width: 100;"/>
        </VBox>
    </right>

</BorderPane>